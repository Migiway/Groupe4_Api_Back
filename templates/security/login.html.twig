{% extends 'login.html.twig' %}

{% block body %}
    <section class="login_section1">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 p-0">
                    <div class="engine">
                        <img class="img-fluid" src="{{ asset("assests/img/photo3.png") }}" alt="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row justify-content-center login_logonfrom2 ">
                        <div class="col-md-5 ">
                            <div class="login_logonfrom">
                                <div class="login_logo">
                                    <img class="img-fluid w-75" src="{{ asset("assests/img/logo.png") }}" alt="">

                                </div>

                                <div class="login_rightform">
                                <form class="login_form" action="" style="max-width:500px;margin:auto" method="post">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                        <p>Veuillez vous identifier</p>

                                        <div class="input-container login_input_container">
                                            <i class="fas fa-user login_icon"></i>
                                            <input class="input-field login_input_field" type="email" value="{{ last_username }}" placeholder="E-mail" name="email" required autofocus>
                                        </div>

                                        <div class="input-container login_input_container">
                                            <i class="fas fa-lock login_icon"></i>
                                            <input class="input-field login_input_field" type="password" placeholder="Mot de passe" name="password" placeholder="Password" required>
                                        </div>
                                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">



                                        <button type="submit" class="btn login_button">CONNEXION</button>
                                        <div class="login_buttonp">
                                            <p>Mot de passe oublié ?</p>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="login_copyright">
                        <h5>
                            <span class="spanh5"> Smartleads © tous droits réservés | </span>Contactez le support technique
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
