            <div class="row py-4">
                <div class="col-md-4 div-options-list">
                    <div class="row mb-5">

                        <div class="col-md-8">

                            <div class="listline">
                                <ul id="menu">
                                    <form id="form-delete-contact" name="delete-company" method="post"
                                          action="/admin/contact/delete-select">
                                        <input id="contacts" type="hidden" name="contacts">
                                    </form>
                                    <li><a id="delete-select-contact" href="#"><i class="fas fa-trash"></i></a></li>
                                    <li><a href="/admin/contact/export"><i class="fas fa-download"></i></a></li>
                                    <li><a href="#"><i class="fas fa-user-plus" data-toggle="modal"
                                                       data-target="#exampleModal"></i></a></li>

                                </ul>

                            </div>

                            <!-- Modal -->
                            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header" style="justify-content: center">
                                            <h5 class="modal-title" id="exampleModalLabel">Import Contact <i
                                                        class="fas fa-download"></i></h5>
                                        </div>
                                        <div class="modal-body" style="text-align: center">
                                            <div>
                                                {{ form_widget(form.contact_import) }}
                                            </div>
                                            <div class="pagibutton" style="margin-top: 20px;">
                                                <button type="submit" class="btn btn-primary" style="float: initial">
                                                    IMPORTER
                                                </button>
                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}

                        </div>
                    </div>
