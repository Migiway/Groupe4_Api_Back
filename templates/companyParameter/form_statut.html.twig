{% extends 'base.html.twig' %}

{% block body %}

<div class="col-md-12 left_border contact1_background_col9">
    <div class="row">
        <div class="col-md-4 p-0">
            <div class="contacts1_text">
                <h3 class="contact1h3">Paramètres</h3>
            </div>
        </div>
        <div class="col-md-5"></div>
        <div class="col-md-3">
            <div class="contact3_input_container3">
                <input class="contact-input-field3" type="text" placeholder="Rechercher..." name="email">
                <i class="fas fa-search "></i>
            </div>
        </div>
    </div>
    {{ form_start(form) }}
    <div class="contact_form ">
        <div class="row justify-content-center ml-0 mr-0 mb-5">
            <div class="col-md-12 ">
                <div class="row rounded border">
                    <div class="col-md-12">
                        <h3 class="contact2_saisieh3 pt-4 ml-5">Paramètres > Entreprise > Statut</h3>
                    </div>
                    <div class="col-md-12 pt-4 pb-5"></div>                    
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-1"></div>                            
                            <div class="col-md-10">
                                <div class="row form_client">
                                    <div class="col-md-6">
                                        <div class="row ">
                                            <div class="col-md-5 form_text">
                                                <p>Libellé</p>
                                            </div>
                                            <div class="col-md-7 input_select_main input_border_left">
                                                <div class="form-group matier_select">
                                                   {{ form_widget(form.libelle) }}
                                                   {{ form_errors(form.libelle) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row pt-3 from_single_input">
                                            <div class="col-md-5 form_text">
                                                <p>Couleur</p>
                                            </div>
                                            <div class="col-md-7 form-group code_client">
                                                {{ form_widget(form.color) }}
                                                {{ form_errors(form.color) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 pt-5">
                        <div class="row py-4">
                            <div class="col-md-3">
                                <div class="retourbutton">
                                    <a href="/admin/parameter"><button  type="button" class="btn btn-primary"><i class="fas fa-arrow-left"></i> RETOUR </button></a>
                                </div>
                            </div>
                            <div class="col-md-7"> </div>
                            <div class="col-md-2">
                                <div class="enregisterbutton">
                                    {{ form_widget(form.save) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>

{% endblock %}
