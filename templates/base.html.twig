    <!--  data_tables -->
    <script type="text/javascript" charset="utf8"
            src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            //initialisation du tableau
            $('#myTable').DataTable({
                "lengthMenu": [[10, 25, 50, -1],
                    ["10", "25", "50", "Toutes"]],
                "language": {
                    "paginate": {
                        "previous": '<i class="fa fa-arrow-left"></i>',
                        "next": '<i class="fa fa-arrow-right"></i>'
                    },
                    searchPlaceholder: "Rechercher",
                    search: "",
                    "sSearch": '<a class="btn searchBtn" id="searchBtn"><i class="fa fa-search"></i></a>',
                    sLengthMenu: "_MENU_",
                    infoEmpty: "Aucunes données trouvées",
                    "info": "",
                },
                "dom": '<"top"if>rt<"bottom"lp><"clear">'
            });

            $('#check-all').change(function() {
                if ($(this).is(':checked')) {
                    $('#myTable tbody .custom-checkbox input').prop('checked', true);
                }
                else {
                    $('#myTable tbody .custom-checkbox input').prop('checked', false);
                }
            });
            $('#delete-select-company').click(function() {
                var company = [];
                $( "#myTable tbody .custom-checkbox input" ).each(function( index ) {
                    if ($(this).prop('checked') == true ) {
                        company.push($(this).val());
                    }
                });
                if (company.length > 0) {
                    $('#companys').val(company);
                    $( "#form-delete-company" ).submit();
                }
                else {
                }
            });
        });
    </script>
